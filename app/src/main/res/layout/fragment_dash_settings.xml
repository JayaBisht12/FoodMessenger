<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashSettingsFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/ivProfilepic"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toEndOf="@+id/ivProfilepic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toEndOf="@+id/ivProfilepic"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    <TextView
        android:id="@+id/tvChangePass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height"
        android:layout_marginTop="84dp"
        android:drawableRight="@drawable/ic_baseline_play_arrow_24"

        android:gravity="center_vertical"
        android:text="  Change Password"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilepic" />

    <TextView
        android:id="@+id/tvTandC"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height"

        android:drawableRight="@drawable/ic_baseline_play_arrow_24"
        android:gravity="center_vertical"
        android:text="  Terms And Conditions"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChangePass" />

    <TextView
        android:id="@+id/tvPrivacyPolicy"
        android:layout_width="407dp"
        android:layout_height="55dp"

        android:drawableRight="@drawable/ic_baseline_play_arrow_24"
        android:gravity="center_vertical"
        android:text=" Privacy Policy"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTandC" />

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height"
        android:drawableRight="@drawable/ic_baseline_play_arrow_24"

        android:gravity="center_vertical"
        android:text=" Share "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrivacyPolicy" />


    <Button
        android:id="@+id/bDelete"
        android:layout_width="406dp"
        android:layout_height="55dp"
        android:backgroundTint="#DF0909"
        android:gravity="center_vertical"
        android:text="  Delete User"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShare" />

    <Button
        android:id="@+id/bLogOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_height"
        android:gravity="center_vertical"
        android:text=" Log Out"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bDelete" />
</androidx.constraintlayout.widget.ConstraintLayout>